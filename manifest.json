{
    "manifest_version": 2,
    "name": "Gradenotifier",
    "version": "1.0",
    "description": "Chrome extension component for Gradenotifier",
    "icons": {"152": "icon152.png"},
    "permissions": ["activeTab"],

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js":      ["jquery.js", "content.js"]
    }],

    "background": {
        "scripts": ["sender.js"],
        "persistent": false
    },

    "browser_action": {
        "default_title": "Grade Notifier"
    } 
}
